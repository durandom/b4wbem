<!DOCTYPE PAULA_CONFIG SYSTEM "../provider.dtd" [

<!ENTITY transport       "/etc/postfix/transport"            >
<!ENTITY postmap         "| postmap /etc/postfix/transport"  >
<!ENTITY postfix_reload  "| postfix reload"                  >

]>

<PAULA_CONFIG>

  <!-- ******************** -->
  <!-- **** PROPERTIES **** -->
  <!-- ******************** -->

  <!-- ****************** -->
  <PROPERTY ID="ServerName" >
    <IN SECTION="s1" HANDLE="transport">
      <REGEXP MODIFIERS="ms">(.*?^\S+\s*:\[)(\S+)(\]$.*)</REGEXP>
    </IN>
    <OUT SECTION="s1" HANDLE="transport">
      <FUNCTION/>
    </OUT>
    <OUT HANDLE="postmap">
    </OUT>
    <OUT HANDLE="postfix_reload">
    </OUT>
  </PROPERTY>

  <!-- ********************* -->
  <!-- **** KEYBINDINGS **** -->
  <!-- ********************* -->

  <KEYBINDINGS>
    <IN HANDLE="transport">
    </IN>
  </KEYBINDINGS>


  <!-- ****************** -->
  <!-- **** SECTIONS **** -->
  <!-- ****************** -->

  <SECTION ID="s1">
    <REGEXP MODIFIERS="ms">(.*)^($KEY_Domain.*?^\.$KEY_Domain.*?)$(.*)</REGEXP>
  </SECTION>


  <!-- ***************** -->
  <!-- **** HANDLES **** -->
  <!-- ***************** -->

  <HANDLE ID="transport"           NO="1"      TYPE="FILE"        ACCESS="RW"
        NAME="&transport;">
    <WHITESPACE WRITE=" " />
    <COMMENTS>
      <READ.LINE>#</READ.LINE>
      <WRITE.LINE> #</WRITE.LINE>
    </COMMENTS>
  </HANDLE>

  <HANDLE ID="postmap"              NO="2"      TYPE="COMMAND"     ACCESS="W"
	  NAME="&postmap;">
  </HANDLE>

  <HANDLE ID="postfix_reload"       NO="3"      TYPE="COMMAND"     ACCESS="W"
	  NAME="&postfix_reload;">
  </HANDLE>

</PAULA_CONFIG>

