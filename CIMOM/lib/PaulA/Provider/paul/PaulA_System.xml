<!DOCTYPE PAULA_CONFIG SYSTEM "../provider.dtd" [

<!ENTITY shells         "/etc/shells"                              >

]>

<PAULA_CONFIG>

  <!-- ******************** -->
  <!-- **** PROPERTIES **** -->
  <!-- ******************** -->

  <!-- *********************** -->
  <PROPERTY ID="ValidLoginShells">
    <INOUT HANDLE="shells">
      <FUNCTION/>
    </INOUT>
  </PROPERTY>



  <!-- ****************** -->
  <!-- **** SECTIONS **** -->
  <!-- ****************** -->



  <!-- ***************** -->
  <!-- **** HANDLES **** -->
  <!-- ***************** -->

  <HANDLE ID="shells"            NO="3"      TYPE="FILE"        ACCESS="RW"
	  NAME="&shells;">
    <WHITESPACE WRITE=" " />
    <COMMENTS>
      <READ.LINE>#</READ.LINE>
      <WRITE.LINE> #</WRITE.LINE>
    </COMMENTS>
  </HANDLE>


</PAULA_CONFIG>

